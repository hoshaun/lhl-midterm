<!DOCTYPE html>
<html lang="en">

<head>
  <title>My quizzes</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/my_quizzes.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('nav') %>
  <% if (attempts) { %>
    <% for (const attempt of attempts) { %>
      <% if (attempt) { %>
        <div class="quiz">
          <div>Title: <%= attempt.quiz.title %></div>
          <div>Creator: <%= attempt.quiz.creator_name %></div>
          <div>Description: <%= attempt.quiz.description %></div>
          <div>Quiz URL: <a href='/quizzes/<%= attempt.quiz.url %>'><%= attempt.quiz.url %></a></div>
          <div>My score: <%= attempt.score %> / <%= attempt.max_score %></div>
          <div>Share your score: <a href="/attempts/<%= attempt.url %>"><%= hostname %>/attempts/<%= attempt.url %></a></div>
        </div>
      <% } %>
    <% } %>
  <% } %>
</body>

</html>
